<div class='list_container'>
  <div class='create_button'>
    <%= link_to 'Create a Recipe', new_recipe_path %> 
  </div>

  <% flash.each do |type, msg| %>
    <%= content_tag :div, msg, class: "#{type} alert" %>
  <% end %>
  <% @recipes.each do |recipe| %>
    <div class='element'>
      <div class='element_left'>
        <%= link_to recipe.name.capitalize, recipe %> 
        <%= button_to 'Remove', recipe_path(recipe), method: :delete %> 
      </div>
      <div class='element_right'>  
        <%= recipe.description %>
      </div>

    </div>
  <% end %>
</div>
