<h1>Add new food here</h1>
<%= form_with mode: @new_food, url: user_foods_path do |form| %>
  <div>
  <%= form.label :name, "food name"%>
  <%= form.text_field :name%>
  </div>
  <div>
  <%= form.label :measurement_unit, "measurement unit"%>
  <%= form.text_field :measurement_unit%>
  </div>
  <div>
  <%= form.label :price, "Unit price"%>
  <%= form.number_field :price%></div>
  <div> <%= form.submit%></div>
<% end %>
    <%= button_to 'Cancel', user_path(current_user), method: :get%>

